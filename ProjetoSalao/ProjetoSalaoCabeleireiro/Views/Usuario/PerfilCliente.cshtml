@using ProjetoBenner.Models;

<div class="page-header navbar-fixed-top navbar">
    <img class="Logo" src="~/Content/imagens/Logo.png" />
    <span class="logout">@Html.ActionLink("Logout", "FazerLogout", "Login", new object { }, new { @class = "logout" })</span>
</div>
<div class="page-container">
    <div class="page-content-wrapper">

        <ul class="bg-gradient-primary sidebar menu">

            <li class="nav-item">
                <a class="nav-link">
                    <span>@Html.ActionLink("Inicio", "IndexHomeCliente", "Home")</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link">
                    <span>@Html.ActionLink("Galeria", "IndexGaleria", "Galeria")</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link">
                    <span>@Html.ActionLink("Agendar Horário", "FormularioAgenda", "Agenda")</span>
                </a>
            </li>

        </ul>

        <div class="formulario">
            <form class="navbar-search form">
                @if (Session["ClienteLogado"] != null)
                {
                    var cliente = Session["ClienteLogado"] as Cliente;
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="nome">Nome:</label>
                            <label class="form-control" for="nome">@cliente.Nome</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cpf">CPF:</label>
                            <label class="form-control" for="cpf">@cliente.CPF</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="telefone">Telefone:</label>
                            <label class="form-control" for="telefone">@cliente.Telefone</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="email">Email:</label>
                            <label class="form-control" for="email">@cliente.Email</label>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="cep">CEP: </label>
                            <label class="form-control" for="cep">@cliente.CEP</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cidade">Cidade: </label>
                            <label class="form-control" for="cidade">@cliente.Cidade</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="bairro">Bairro: </label>
                            <label class="form-control" for="bairro">@cliente.Bairro</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="rua">Rua: </label>
                            <label class="form-control" for="rua">@cliente.Rua</label>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="numero">Numero: </label>
                            <label class="form-control" for="numero">@cliente.Numero</label>
                        </div>
                    </div>
                }
                <span>@Html.ActionLink("Alterar Dados", "FormularioEndereco", "Endereco", new object { }, new { @style = "color: white;" })</span>

            </form>
        </div>
    </div>
</div>
<footer class="page-footer-inner">
    &copy;
</footer>