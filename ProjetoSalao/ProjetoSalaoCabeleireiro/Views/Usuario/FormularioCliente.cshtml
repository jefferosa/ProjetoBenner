<div class="tela-login">
    <form action="/Usuario/AdicionarCliente" method="post" class="form-signin form-cadastro text-center navbar-search">
        <div class="form-row">

            <div class="form-group col-md-6">
                <label for="nome">Nome</label>
                <input id="nome" name="cliente.Nome" value="@ViewBag.Cliente.Nome" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label for="login">Login:</label>
                <input id="login" name="cliente.Login" value="@ViewBag.Cliente.Login" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label for="cpf">CPF:</label>
                <input id="cpf" name="cliente.CPF" value="@ViewBag.Cliente.CPF" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label for="email">Email:</label>
                <input id="email" name="cliente.Email" type="email" value="@ViewBag.Cliente.Email" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label for="telefone">Telefone:</label>
                <input id="telefone" name="cliente.Telefone" value="@ViewBag.Cliente.Telefone" class="form-control" />
            </div>

            <div class="form-group col-md-6">
                <label for="senha">Senha:</label>
                <input id="senha" name="cliente.Senha" type="password" value="@ViewBag.Cliente.Senha" class="form-control" />
            </div>

            <div>
                <label for="cep">Cep:</label>
                <input name="cliente.CEP" type="text" id="cep" value="@ViewBag.CLiente.CEP" size="60" maxlength="9" onblur="pesquisacep(this.value);" class="form-control" />
            </div>
            <div class="form-group col-md-9">
                <label for="rua">Rua:</label>
                <input name="cliente.Rua" type="text" id="rua" value="@ViewBag.CLiente.Rua" size="60" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label for="numero">Número:</label>
                <input name="cliente.Numero" type="text" id="numero" value="@ViewBag.CLiente.Numero" size="10" class="form-control" />
            </div>
            <div class="form-group col-md-5">
                <label for="bairro">Bairro:</label>
                <input name="cliente.Bairro" type="text" id="bairro" value="@ViewBag.CLiente.Bairro" size="40" class="form-control" />
            </div>
            <div class="form-group col-md-5">
                <label for="cidade"> Cidade:</label>
                <input name="cliente.Cidade" type="text" id="cidade" value="@ViewBag.CLiente.Cidade" size="40" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <label for="estado">Estado:</label>
                <input name="cliente.UF" type="text" id="uf" value="@ViewBag.CLiente.UF" size="1" class="form-control" />
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Criar Conta</button>

            <span>@Html.ActionLink("Acessar Conta", "IndexLogin", "Login", new object { }, new { @style = "color: white;" })</span>
        </div>
    </form>
</div>