<form action="/Usuario/AdicionarCliente" method="post" class="form-signin text-center navbar-search bg-light">
    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="nome">Nome</label>
            <input id="nome" name="cliente.Nome" value="@ViewBag.Cliente.Nome" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label for="login">Login:</label>
            <input id="login" name="cliente.Login" value="@ViewBag.Cliente.Login" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label for="cpf">CPF:</label>
            <input id="cpf" name="cliente.CPF" value="@ViewBag.Cliente.CPF" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label for="email">Email:</label>
            <input id="email" name="cliente.Email" type="email" value="@ViewBag.Cliente.Email" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label for="telefone">Telefone:</label>
            <input id="telefone" name="cliente.Telefone" value="@ViewBag.Cliente.Telefone" class="form-control" />
        </div>

        <div class="form-group col-md-6">
            <label for="senha">Senha:</label>
            <input id="senha" name="cliente.Senha" type="password" value="@ViewBag.Cliente.Senha" class="form-control" />
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Criar Conta</button>

        <span>@Html.ActionLink("Acessar Conta", "IndexLogin", "Login", new object { }, new { @style = "color: black;" })</span>
    </div>
</form>
