                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <label for="nome">Nome</label>
                                    <input id="nome" name="cliente.Nome" class="form-control" type="text" required />
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="login">Login:</label>
                                    <input id="login" name="cliente.Login" class="form-control" type="text" min="4" required />
                                </div>

                                <div class="form-group col-md-6">
                                    <label for="cpf">CPF:</label>
                                    <input id="cpf" name="cliente.CPF" class="form-control" type="text" maxlength="14" pattern="[0-9]{3}\.?[0-9]{3}\.?[0-9]{3}\-?[0-9]{2}" required /><span id="resposta"></span>
                                </div>

                                <div class="form-group col-md-6">
