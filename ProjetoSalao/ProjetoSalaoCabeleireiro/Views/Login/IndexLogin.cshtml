<form action="/Login/AutenticaLogin" method="post" class="form-signin text-center navbar-search">

    @*Imagem*@
    <img class="mb-4" src="~/Content/imagens/Logo.png" alt="" width="72" height="72">

    <h1 class="h3 mb-3 font-weight-normal">Por favor se conecte</h1>

    <label for="login" class="sr-only">Login</label>
    <input style="margin-bottom: 10px" type="text" name="login" id="login" class="form-control" placeholder="Login" required autofocus>

    <label for="senha" class="sr-only">Senha</label>
    <input style="margin-bottom: 20px" type="password" name="senha" id="senha" class="form-control" placeholder="Senha" required>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Acessar</button>

    <span>@Html.ActionLink("Criar Conta", "FormularioCliente", "Usuario", new object { }, new { @class = "criar-conta" })</span>

    <span>@Html.ActionLink("Criar Conta Func.", "FormularioFuncionario", "Usuario", new object { }, new { @style = "color: white;" })</span>
